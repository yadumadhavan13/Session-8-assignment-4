<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
  android:background="#000000"
    tools:context="com.example.y.readwritefile.MainActivity">

    <LinearLayout
        android:id="@+id/add_data_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/add_data_et"
            android:background="#ffffff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/add_data_bt"
            android:text="ADD DATA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:textColor="#ffffff"
        android:text="Content From File"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />
    <TextView
        android:id="@+id/display_data_tv"
        android:padding="10dp"
        android:textSize="18dp"
        android:text="Hello"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/delete_data_bt"
        android:background="#ffffff"
        android:text="DELETE FILE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
